{
  "designSystemProfile": {
    "name": "Modern Dark SaaS Design System",
    "version": "1.0",
    "description": "A contemporary design system featuring dark themes, minimalist aesthetics, and productivity-focused layouts",

    "colorPalette": {
      "primary": {
        "background": "#1a1a1a",
        "surface": "#2a2a2a",
        "accent": "#ff6b6b",
        "description": "Deep dark backgrounds with vibrant red accent for CTAs and highlights"
      },
      "text": {
        "primary": "#ffffff",
        "secondary": "#b0b0b0",
        "muted": "#808080",
        "description": "High contrast white text with muted gray variants for hierarchy"
      },
      "interactive": {
        "hover": "#ff5252",
        "active": "#ff4444",
        "focus": "#ff6b6b",
        "description": "Red-based interactive states with subtle variations"
      }
    },

    "typography": {
      "fontFamily": {
        "primary": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "description": "Clean system fonts for optimal readability"
      },
      "scale": {
        "hero": {
          "size": "clamp(2.5rem, 5vw, 4rem)",
          "weight": "600",
          "lineHeight": "1.2",
          "letterSpacing": "-0.02em",
          "description": "Large hero text with tight line height and negative letter spacing"
        },
        "heading": {
          "size": "clamp(1.5rem, 3vw, 2.5rem)",
          "weight": "600",
          "lineHeight": "1.3",
          "description": "Section headings with medium weight"
        },
        "body": {
          "size": "1rem",
          "weight": "400",
          "lineHeight": "1.6",
          "description": "Standard body text with comfortable reading line height"
        },
        "caption": {
          "size": "0.875rem",
          "weight": "400",
          "lineHeight": "1.5",
          "color": "muted",
          "description": "Smaller text for captions and metadata"
        }
      }
    },

    "spacing": {
      "scale": "geometric",
      "baseUnit": "1rem",
      "values": {
        "xs": "0.25rem",
        "sm": "0.5rem",
        "md": "1rem",
        "lg": "2rem",
        "xl": "4rem",
        "2xl": "6rem",
        "3xl": "8rem"
      },
      "sectionSpacing": {
        "vertical": "6rem",
        "description": "Large vertical spacing between major sections"
      }
    },

    "layout": {
      "maxWidth": "1200px",
      "containerPadding": "2rem",
      "gridSystem": {
        "columns": 12,
        "gap": "2rem",
        "breakpoints": {
          "mobile": "768px",
          "tablet": "1024px",
          "desktop": "1200px"
        }
      },
      "sections": {
        "hero": {
          "minHeight": "100vh",
          "alignment": "center",
          "padding": "6rem 0",
          "description": "Full viewport height hero with centered content"
        },
        "content": {
          "padding": "6rem 0",
          "maxWidth": "800px",
          "centerAligned": true,
          "description": "Content sections with constrained width and center alignment"
        }
      }
    },

    "components": {
      "buttons": {
        "primary": {
          "background": "accent",
          "color": "white",
          "padding": "0.75rem 2rem",
          "borderRadius": "0.5rem",
          "fontSize": "1rem",
          "fontWeight": "500",
          "border": "none",
          "transition": "all 0.2s ease",
          "hoverEffect": "scale(1.05) + brightness(1.1)"
        },
        "secondary": {
          "background": "transparent",
          "color": "primary",
          "border": "1px solid rgba(255,255,255,0.2)",
          "padding": "0.75rem 2rem",
          "borderRadius": "0.5rem"
        }
      },

      "cards": {
        "default": {
          "background": "rgba(255,255,255,0.05)",
          "border": "1px solid rgba(255,255,255,0.1)",
          "borderRadius": "1rem",
          "padding": "2rem",
          "backdropFilter": "blur(10px)",
          "transition": "all 0.3s ease",
          "hoverEffect": "translateY(-4px) + box-shadow enhancement"
        },
        "valueCard": {
          "minHeight": "200px",
          "textAlign": "left",
          "title": {
            "fontSize": "1.25rem",
            "fontWeight": "600",
            "marginBottom": "1rem"
          },
          "description": {
            "fontSize": "0.95rem",
            "lineHeight": "1.6",
            "color": "secondary"
          }
        }
      },

      "navigation": {
        "header": {
          "position": "fixed",
          "top": 0,
          "width": "100%",
          "background": "rgba(26,26,26,0.8)",
          "backdropFilter": "blur(20px)",
          "padding": "1rem 2rem",
          "borderBottom": "1px solid rgba(255,255,255,0.1)"
        },
        "links": {
          "fontSize": "0.95rem",
          "color": "secondary",
          "transition": "color 0.2s ease",
          "hoverColor": "primary",
          "spacing": "2rem"
        }
      }
    },

    "visualEffects": {
      "glassmorphism": {
        "background": "rgba(255,255,255,0.05)",
        "backdropFilter": "blur(10px)",
        "border": "1px solid rgba(255,255,255,0.1)",
        "description": "Subtle glass-like effects for modern UI elements"
      },
      "gradients": {
        "subtle": "linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%)",
        "accent": "linear-gradient(135deg, #ff6b6b 0%, #ff5252 100%)",
        "background": "radial-gradient(ellipse at center, rgba(255,107,107,0.1) 0%, rgba(26,26,26,1) 70%)"
      },
      "animations": {
        "fadeInUp": {
          "keyframes": "translateY(30px) opacity(0) -> translateY(0) opacity(1)",
          "duration": "0.6s",
          "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
        },
        "scaleOnHover": {
          "transform": "scale(1.05)",
          "transition": "transform 0.2s ease"
        }
      }
    },

    "contentStructure": {
      "heroSection": {
        "order": 1,
        "elements": ["logo", "headline", "subheadline", "primaryCTA"],
        "layout": "centered",
        "spacing": "2rem between elements"
      },
      "featuresSection": {
        "order": 2,
        "elements": ["sectionTitle", "featureGrid", "visualDemonstration"],
        "layout": "grid-based",
        "gridColumns": "responsive (1-3 columns)"
      },
      "valuesSection": {
        "order": 3,
        "elements": ["sectionTitle", "valuesGrid"],
        "layout": "grid-based",
        "gridColumns": "3 columns desktop, 1-2 mobile",
        "cardStyle": "equal height with consistent spacing"
      },
      "teamSection": {
        "order": 4,
        "elements": ["sectionTitle", "teamGrid"],
        "layout": "grid-based"
      }
    },

    "responsiveDesign": {
      "approach": "mobile-first",
      "breakpoints": {
        "mobile": "max-width: 767px",
        "tablet": "768px - 1023px",
        "desktop": "min-width: 1024px"
      },
      "adaptations": {
        "mobile": {
          "typography": "smaller hero text, increased line height",
          "layout": "single column, reduced padding",
          "navigation": "hamburger menu",
          "spacing": "reduced vertical spacing"
        },
        "tablet": {
          "layout": "2-column grid for cards",
          "typography": "medium scaling"
        },
        "desktop": {
          "layout": "full multi-column layouts",
          "effects": "enhanced hover states and animations"
        }
      }
    },

    "designPrinciples": {
      "minimalism": "Clean, uncluttered interfaces with plenty of whitespace",
      "contrast": "High contrast between text and background for accessibility",
      "consistency": "Consistent spacing, typography, and color usage throughout",
      "performance": "Lightweight animations and optimized for fast loading",
      "accessibility": "WCAG compliant color contrasts and semantic markup",
      "modernism": "Contemporary design trends with subtle glass effects and smooth animations"
    },

    "implementationGuidelines": {
      "cssFramework": "Tailwind CSS recommended for utility-first approach",
      "animations": "CSS transitions and transforms, avoid heavy JavaScript animations",
      "images": "WebP format with fallbacks, lazy loading for performance",
      "fonts": "System fonts for performance, web fonts only for branding",
      "darkMode": "Primary design mode, light mode as optional alternative",
      "performance": "Minimize bundle size, optimize for Core Web Vitals"
    }
  }
}
