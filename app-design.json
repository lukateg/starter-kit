{
  "designSystem": {
    "name": "Modern Dashboard UI Kit",
    "version": "1.0",
    "description": "Dark-themed dashboard design system with emphasis on data visualization and clean layouts"
  },
  "themes": {
    "dark": {
      "primary": {
        "background": "#1a1f2e",
        "surface": "#242b3d",
        "surfaceElevated": "#2a3441"
      },
      "accent": {
        "primary": "#00d4aa",
        "secondary": "#4a9eff",
        "tertiary": "#7c3aed"
      },
      "text": {
        "primary": "#ffffff",
        "secondary": "#a0a9ba",
        "muted": "#6b7280"
      },
      "borders": {
        "default": "#374151",
        "focus": "#4a9eff",
        "error": "#ef4444"
      }
    },
    "light": {
      "primary": {
        "background": "#f8fafc",
        "surface": "#ffffff",
        "surfaceElevated": "#f1f5f9"
      },
      "accent": {
        "primary": "#00d4aa",
        "secondary": "#4a9eff",
        "tertiary": "#7c3aed"
      },
      "text": {
        "primary": "#1e293b",
        "secondary": "#64748b",
        "muted": "#94a3b8"
      },
      "borders": {
        "default": "#e2e8f0",
        "focus": "#4a9eff",
        "error": "#ef4444"
      }
    }
  },
  "colorPalette": {
    "status": {
      "success": "#10b981",
      "warning": "#f59e0b",
      "error": "#ef4444",
      "info": "#3b82f6"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "Inter, -apple-system, BlinkMacSystemFont, sans-serif",
      "monospace": "JetBrains Mono, Consolas, monospace"
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "fontWeights": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "hierarchy": {
      "cardTitle": {
        "fontSize": "1.125rem",
        "fontWeight": 600,
        "color": "#ffffff"
      },
      "metricValue": {
        "fontSize": "1.875rem",
        "fontWeight": 700,
        "color": "#ffffff"
      },
      "metricLabel": {
        "fontSize": "0.875rem",
        "fontWeight": 500,
        "color": "#a0a9ba"
      },
      "bodyText": {
        "fontSize": "0.875rem",
        "fontWeight": 400,
        "color": "#a0a9ba"
      }
    }
  },
  "spacing": {
    "scale": "0.25rem",
    "sizes": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem"
    }
  },
  "borderRadius": {
    "none": "0",
    "sm": "0.25rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.3)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.4)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.5)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.6)"
  },
  "components": {
    "card": {
      "structure": {
        "container": {
          "backgroundColor": "theme.primary.surface",
          "borderRadius": "0.75rem",
          "padding": "1.5rem",
          "boxShadow": {
            "dark": "0 4px 6px -1px rgba(0, 0, 0, 0.4)",
            "light": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)"
          },
          "border": {
            "dark": "none",
            "light": "1px solid theme.borders.default"
          }
        },
        "header": {
          "marginBottom": "1rem"
        },
        "content": {
          "display": "flex",
          "flexDirection": "column",
          "gap": "1rem"
        }
      },
      "variants": {
        "metric": {
          "description": "Cards displaying key metrics with large numbers and trend indicators",
          "elements": ["title", "value", "changeIndicator", "chart"]
        },
        "form": {
          "description": "Cards containing form elements and user inputs",
          "elements": ["title", "formFields", "buttons"]
        },
        "chart": {
          "description": "Cards primarily displaying data visualizations",
          "elements": ["title", "description", "chartArea"]
        },
        "widget": {
          "description": "Interactive widgets with controls and displays",
          "elements": ["title", "controls", "display", "actions"]
        }
      }
    },
    "navigation": {
      "topBar": {
        "height": "4rem",
        "backgroundColor": "theme.primary.background",
        "padding": "0 1.5rem",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "space-between",
        "borderBottom": {
          "dark": "none",
          "light": "1px solid theme.borders.default"
        }
      },
      "tabNavigation": {
        "backgroundColor": "transparent",
        "borderRadius": "0.5rem",
        "padding": "0.25rem",
        "display": "flex",
        "gap": "0.25rem"
      },
      "tab": {
        "padding": "0.5rem 1rem",
        "borderRadius": "0.375rem",
        "fontSize": "0.875rem",
        "fontWeight": 500,
        "states": {
          "default": {
            "backgroundColor": "transparent",
            "color": "theme.text.secondary"
          },
          "active": {
            "backgroundColor": "theme.accent.secondary",
            "color": "#ffffff"
          },
          "hover": {
            "backgroundColor": {
              "dark": "#2a3441",
              "light": "theme.primary.surfaceElevated"
            },
            "color": "theme.text.primary"
          }
        }
      }
    },
    "forms": {
      "input": {
        "backgroundColor": {
          "dark": "#1a1f2e",
          "light": "#ffffff"
        },
        "border": "1px solid theme.borders.default",
        "borderRadius": "0.5rem",
        "padding": "0.75rem 1rem",
        "fontSize": "0.875rem",
        "color": "theme.text.primary",
        "states": {
          "focus": {
            "borderColor": "theme.borders.focus",
            "outline": "2px solid rgba(74, 158, 255, 0.2)"
          },
          "error": {
            "borderColor": "theme.borders.error"
          }
        }
      },
      "button": {
        "borderRadius": "0.5rem",
        "padding": "0.75rem 1.5rem",
        "fontSize": "0.875rem",
        "fontWeight": 600,
        "variants": {
          "primary": {
            "backgroundColor": "theme.accent.primary",
            "color": "#ffffff"
          },
          "secondary": {
            "backgroundColor": {
              "dark": "#374151",
              "light": "theme.primary.surfaceElevated"
            },
            "color": "theme.text.primary"
          },
          "ghost": {
            "backgroundColor": "transparent",
            "color": "theme.text.secondary",
            "border": "1px solid theme.borders.default"
          }
        }
      }
    },
    "dataVisualization": {
      "chart": {
        "colors": {
          "primary": "#00d4aa",
          "secondary": "#4a9eff",
          "tertiary": "#7c3aed",
          "quaternary": "#f59e0b"
        },
        "grid": {
          "color": {
            "dark": "#374151",
            "light": "#e2e8f0"
          },
          "strokeWidth": 1
        },
        "axes": {
          "color": "theme.text.muted",
          "fontSize": "0.75rem"
        }
      },
      "progressBar": {
        "height": "0.5rem",
        "backgroundColor": {
          "dark": "#374151",
          "light": "#e2e8f0"
        },
        "borderRadius": "0.25rem",
        "fill": {
          "backgroundColor": "theme.accent.primary",
          "borderRadius": "0.25rem"
        }
      }
    },
    "calendar": {
      "container": {
        "backgroundColor": "theme.primary.surface",
        "borderRadius": "0.75rem",
        "padding": "1.5rem",
        "border": {
          "dark": "none",
          "light": "1px solid theme.borders.default"
        }
      },
      "header": {
        "display": "flex",
        "justifyContent": "space-between",
        "alignItems": "center",
        "marginBottom": "1rem"
      },
      "grid": {
        "display": "grid",
        "gridTemplateColumns": "repeat(7, 1fr)",
        "gap": "0.25rem"
      },
      "day": {
        "width": "2.5rem",
        "height": "2.5rem",
        "borderRadius": "0.375rem",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "fontSize": "0.875rem",
        "states": {
          "default": {
            "color": "theme.text.secondary"
          },
          "today": {
            "backgroundColor": "theme.accent.primary",
            "color": "#ffffff"
          },
          "selected": {
            "backgroundColor": "theme.accent.secondary",
            "color": "#ffffff"
          },
          "otherMonth": {
            "color": "theme.text.muted"
          }
        }
      }
    }
  },
  "layout": {
    "container": {
      "maxWidth": "1440px",
      "margin": "0 auto",
      "padding": "0 1.5rem"
    },
    "grid": {
      "columns": 12,
      "gap": "1.5rem",
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
      }
    },
    "dashboardLayout": {
      "display": "grid",
      "gridTemplateColumns": "repeat(auto-fit, minmax(300px, 1fr))",
      "gap": "1.5rem",
      "padding": "1.5rem"
    }
  },
  "animations": {
    "transitions": {
      "fast": "150ms ease-in-out",
      "medium": "250ms ease-in-out",
      "slow": "350ms ease-in-out"
    },
    "hover": {
      "scale": "1.02",
      "transition": "transform 150ms ease-in-out"
    },
    "chartAnimations": {
      "duration": "800ms",
      "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  "patterns": {
    "metricDisplay": {
      "structure": [
        "metric title (small, muted text)",
        "metric value (large, bold number)",
        "change indicator (percentage with trend)",
        "optional mini chart or sparkline"
      ],
      "layout": "vertical stack with consistent spacing"
    },
    "formCard": {
      "structure": [
        "card title",
        "form fields with labels",
        "action buttons at bottom"
      ],
      "spacing": "consistent 1rem gaps between sections"
    },
    "chartCard": {
      "structure": [
        "chart title and description",
        "chart area with proper margins",
        "optional legend or controls"
      ],
      "chartPadding": "adequate space for labels and axes"
    },
    "widgetCard": {
      "structure": [
        "widget title",
        "main content/display area",
        "controls or settings",
        "action buttons if needed"
      ],
      "interactivity": "hover states and smooth transitions"
    }
  },
  "accessibility": {
    "contrast": {
      "minimum": "4.5:1 for normal text",
      "enhanced": "7:1 for important content"
    },
    "focusStates": {
      "outline": "2px solid theme.borders.focus",
      "offset": "2px"
    },
    "semanticColors": {
      "success": "#10b981",
      "warning": "#f59e0b",
      "error": "#ef4444",
      "info": "#3b82f6"
    }
  },
  "responsiveDesign": {
    "mobile": {
      "cardPadding": "1rem",
      "fontSize": "scale down by 0.125rem",
      "gridColumns": "1 column layout"
    },
    "tablet": {
      "cardPadding": "1.25rem",
      "gridColumns": "2 column layout"
    },
    "desktop": {
      "cardPadding": "1.5rem",
      "gridColumns": "3-4 column layout"
    }
  },
  "usage": {
    "themeImplementation": "Use 'theme.property.subproperty' syntax to reference theme values dynamically. Components should adapt colors and styles based on the active theme.",
    "cardStructure": "Always use consistent padding, border radius, and background colors for cards. Light theme adds subtle borders for definition.",
    "colorApplication": "Use accent colors sparingly for highlights and primary actions. These remain consistent across themes.",
    "typography": "Maintain clear hierarchy with consistent font sizes and weights. Text colors automatically adapt to theme.",
    "spacing": "Use the spacing scale consistently throughout all components regardless of theme.",
    "dataVisualization": "Apply consistent color schemes and styling across all charts. Grid colors adapt to theme for better visibility.",
    "interactions": "Include hover states and smooth transitions for better UX. Hover colors adapt to provide proper contrast in each theme.",
    "shadows": "Use deeper shadows in dark theme, lighter shadows in light theme to maintain proper depth perception.",
    "borders": "Light theme relies more on borders for component definition, dark theme uses elevation and contrast."
  }
}
